<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TextAppearance.Medium" parent="@android:style/TextAppearance.Material.Medium">
    </style>

    <style name="TextAppearance.Small" parent="@android:style/TextAppearance.Material.Small">
    </style>

    <style name="TextAppearance.Switch" parent="TextAppearance.Medium">
    </style>

    <style name="TextAppearance.CategoryTitle" parent="@android:style/TextAppearance.Material.Small">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TileTitle" parent="@android:style/TextAppearance.Material.Medium">
    </style>

    <style name="TextAppearance.TileSubTitle" parent="@android:style/TextAppearance.Material.Small">
    </style>

    <style name="Material_Dialog" parent="@android:style/Theme.Material.Light.Dialog">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="Material_Dialog.EditText">
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.Small.SwitchBar">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Used to color the switch bar controls -->
    <style name="ThemeOverlay.SwitchBar" parent="ThemeOverlay.AppCompat">
        <!-- Used by controls, e.g. CheckBox, ProgressBar, etc. -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonBar" parent="Theme.AppCompat.Light.Dialog">
        <!-- Used by controls, e.g. CheckBox, ProgressBar, etc. -->
        <item name="android:colorButtonNormal">@color/colorAccent</item>
    </style>


</resources>
